<%= form_with(model: @blog_post, local: true) do |form| %>
  <% if @blog_post.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(@blog_post.errors.count, "error") %> prohibited this @blog_post from being saved:</h2>

      <ul class="list-disc ml-6">
        <% @blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2"%>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: 'Write your title here' %>
  </div>
  <div class="mb-6">
    <%= form.label :content, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :content, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", style: "height: 200px;", placeholder: 'Write some meaningful thoughts' %>
  </div>
  <div class="mb-6">
    <% var1 = @blog_post.persisted? ? 'Update and Publish' : 'Publish' %>
    <%= button_tag "#{var1}", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline', name: 'commit', value: 'Publish' %>
    <%= button_tag 'Save as Draft', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline', name: 'commit', value: 'Save as Draft' %>

  </div>
<% end %>

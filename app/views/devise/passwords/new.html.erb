<body class="bg-gradient-to-r from-purple-400 via-pink-500 to-red-500">
  <div class="container mx-auto py-20">
    <div class="w-full max-w-xs mx-auto">
      <h1 class="font-hairline text-white text-center text-3xl mb-6">Forgot your password?</h1>

      <%= form_for(resource,
                   as: resource_name,
                   url: password_path(resource_name),
                   html: {
                           method: :post,
                           class: "bg-white mb-4 px-8 pt-6 pb-8 rounded shadow-md"
                   }) do |f| %>

          <%= devise_error_messages! %>

          <div class="mb-4">
              <%= f.label :email, class: "block font-bold mb-2 text-gray-700 text-sm" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                class: "appearance-none border leading-tight focus:outline-none px-3 py-2 rounded shadow focus:shadow-outline text-gray-700 w-full"
              %>
          </div>

          <div class="mb-4">
              <%= f.submit "Send Password Reset Info",
                           class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer w-full"
              %>
          </div>

          <%= render "devise/shared/links" %>
      <% end %>

      <%= render "devise/shared/form_footer" %>
    </div>
  </div>
</body>

<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
      <div class="p-8">
        <h1 class="font-bold text-4xl mb-6 text-center text-gray-800 border-b pb-4">Profile Details</h1>

        <div class="flex items-center mb-8">
          <div class="w-24 h-24 rounded-full overflow-hidden mr-6">
            <% if @user.avatar.attached? %>
              <%= image_tag(@user.avatar, class: "w-full h-full object-cover rounded-full") %>
            <% else %>
              <%= image_tag('default_avatar.png', class: "w-full h-full object-cover rounded-full") %>
            <% end %>
          </div>
          <div>
            <p class="text-gray-900 font-semibold text-lg mb-2"><strong>Name:</strong> <%= @user.username %></p>
            <p class="text-gray-900 text-lg"><strong>Email:</strong> <%= @user.email %></p>
          </div>
        </div>

        <div class="text-center">
          <%= link_to 'Edit Profile', edit_user_registration_path, class: "text-blue-500 hover:underline text-lg" %>
        </div>
      </div>
    </div>
  </div>
</body>
